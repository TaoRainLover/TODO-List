  width: 100%;
  font-family: "苹方-简";
}
.container{
  height: 100%;
  background: rgba(247, 246, 254, 0.56);
  border-radius: 24px 24px 0px 0px;
  box-sizing: border-box;
  /* padding: 0 34rpx; */
