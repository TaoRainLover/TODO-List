  padding: 0 34rpx;
  height: 66rpx;
  font-size: 48rpx;
  padding-top: 38rpx;
  padding-bottom: 38rpx;
  display: flex;
  justify-content: space-between;
}
.timeline{
  margin-right: 40rpx;
  font-weight: bolder;
}
.timeline text{
  margin-left: 20rpx;
  font-size: 24rpx;
