
/* 设置今日事项样式 */
.progressCon{
  height: 248rpx;
  padding:0 78rpx;
  padding-top: 108rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.progressCon .progress{
  height: 100%;
  width: 200rpx;
}
.progressCon .title{
  width: 210rpx;
  height: 248rpx;
  font-size: 88rpx;
  letter-spacing: 16rpx;
  font-weight: bolder;
}
/* 圆形进度条 */
.circleProgress{
  width: 248rpx;
  height: 248rpx;
  position: relative;
}
.circleProgress .num{
  position: absolute;
  height: 164rpx;
  width: 164rpx;
  background: white;
  border-radius: 50%;
  top: 42rpx;
  left: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bolder;
  /* 默认为单数时字体大小 */
  font-size: 88rpx;
  /* 双数时的字体大小 */
  /* font-size: 50rpx; */
  text-shadow: 0rpx 6rpx 12rpx rgba(0, 0, 0, 0.16);
}
.num .finished{
  color: rgba(0, 111, 255, 1);
}

.innerCon{
  width: 244rpx;
  height: 244rpx;
  background: rgba(0, 111, 255, 1);
  border-radius: 50%;
  position: absolute;
  left: 2rpx;
  top: 2rpx;
}
.outsideCon{
  width: 100%;
  height: 100%;
  position: absolute;
}
.outsideCon .circle{
  height: 100%;
  width: 50%;
  position: absolute;
  overflow: hidden;
}
.outsideCon .rightCon{
  top: 0;
  right: 0;
  border-radius: 0 200rpx  200rpx 0;
}
.right{
  height: 100%;
  width: 100%;
  /* 覆盖进度条颜色 */
  background-color: rgb(245, 245, 245);
  transform-origin:left center;
  /* 旋转角度 */
  transform: rotate(0deg);
}
.outsideCon .leftCon{
  top: 0;
  left: 0;
  border-radius: 200rpx  0  0 200rpx;
}
.left{
  height: 100%;
  width: 100%;
  /* 覆盖进度条颜色 */
  background-color: rgb(245, 245, 245);
  transform-origin:right center;
  transform: rotate(0deg);
}


