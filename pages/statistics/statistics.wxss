
.container{
  height: 100%;
  padding: 0 56rpx;
  position: fixed;
}

/* 页面1，用户登录且创建了事项 */
/* 用户昵称 */
.userInfo{
  height: 124rpx;
  
  line-height: 124rpx;
  font-size: 40rpx;
  display: flex;
  align-items: baseline;
}
.userInfo .userName{
  font-size: 88rpx;
  color: rgba(0, 111, 255, 1);
}

/* 用户注册时间信息 */
.resterTimeInfo{
  height: 56rpx;
  font-size: 40rpx;
  font-family: "苹方-简";
  line-height: 56rpx;
  margin-bottom: 35rpx;
}
.resterTimeInfo .rtime{
  color: rgba(0, 111, 255, 1);
}
/* 统计信息 */
.createInfo .title, .finishedInfo .title{
  width: 168rpx;
  height: 70rpx;
  background: #FAFAFE;
  border-radius: 18px;
  font-size: 40rpx;
  /* 设置文本居中 */
  line-height: 70rpx;
  text-align: center;
  margin-bottom: 16rpx;
}
.createInfo .statistics, .finishedInfo .statistics{
  width: 638rpx;
  height: 356rpx;
  background: #FAFAFE;
  border: 1px solid #FAFAFE;
  border-radius: 18px;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 26rpx 0 26rpx 18rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
  }


/* 快速跳转到新建 */
.addNewEve{
  display: flex;
  justify-content: center;
}
.naviToCreateP{
  width: 594rpx;
  height: 70rpx;
  background: #FAFAFE;
  box-shadow: 0px 0px 30px rgba(154, 154, 154, 0.16);
  border-radius: 36rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
}
.naviToCreateP .img{
  width: 56rpx;
  height: 56rpx;
}

/* 统计页2，登录但还未创建事项 */

.LgOc .noEventContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 168rpx 0 240rpx;
  font-size: 40rpx;
}
.LgOc .eventBox{
  width: 638rpx;
  height: 356rpx;
  background: #FAFAFE;
  border-radius: 36rpx;
  margin-bottom: 154rpx;
  /* 子绝父相 */
  position: relative;

}
.LgOc .eventBox .rem{
  
  color: rgba(141, 141, 141, 1);
  position: absolute;
  bottom: 28rpx;
  left: 136rpx;
}
.LgOc .eventBtn{
  width: 544rpx;
  height: 82rpx;
  background: #006FFF;
  opacity: 1;
  border-radius: 28rpx;
  color: white;
  line-height: 82rpx;
  text-align: center;
}
/* 顶部统计事项数字  固定定位 */
.finishedInfo{
  margin-bottom: 70rpx;
}
.eventToday{
  position: fixed  ;
  bottom: 1rpx;
}