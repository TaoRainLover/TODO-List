image{
  height: 56rpx;
  width: 56rpx;
}
.titleCon{
  width: 100%;
  height: 142rpx;
  padding-right: 68rpx;
  box-sizing: border-box;
  z-index: 998;
  position: fixed;
}
.titleCon .con{
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 10;
  height: 100%;
}
.title{
  
  height: 66rpx;
  font-size: 48rpx;
}
.title text{
  font-size: 24rpx;
  margin-left: 24rpx;
}

/* flag列表滑动区域 */
.contentCon{
  height: 85%;
}
.add input, .flagsList .li input{
  width: 530rpx;
  height: 56rpx;
  line-height: 56rpx;
}
.addCon .time, .flagsList .time{
  font-size: 32rpx;
  height: 44rpx;
  color: black;
  margin: 18rpx 0;
}
.add, .flagsList .li .statusfalse{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 56rpx;
  font-size: 40rpx;
  padding-bottom: 14rpx;
}

.add, .flagsList .li .statustrue{
  display: flex;
  color: #FF5050FF;
  justify-content: space-between;
  align-items: center;
  height: 56rpx;
  font-size: 40rpx;
  padding-bottom: 14rpx;
}
.add .input{
  color: black;
}
