/* 对话框区域 */
.toast{
    width: 100%;
    opacity: 1;
    position: fixed;
    z-index: 10110;
}
.toast .toastBg{
    background-color: black;
    opacity: 0.3;
    height: 100%;
    position: absolute;
    width: 100%;
}
.toast .toastCon{
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  /* align-items: center; */
  margin-top: 60%;
}
.toast .showtoast{
  width: 502rpx;
  height: 262rpx;
  background-color: #FFFFFF;
  box-shadow: 0px 0px 198rpx #C6C6C6;
  border-radius: 28rpx;
  position: absolute;
  opacity: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 28rpx 0;
}
.toast .showtoast .title{
  height: 44rpx;
  font-size: 32rpx;
  }
.toast .showtoast input{
  width: 436rpx;
  height: 60rpx;
  
  min-height:60rpx;
  background: #F4F4F4;
  opacity: 1;
  border-radius: 28rpx;
  margin: 30rpx 0 32rpx 0;
  font-size: 32rpx;
  box-sizing: border-box;
  padding-left: 22rpx;
}
.toast .showtoast .operation{
  height: 48rpx;
  width: 164px;
  font-size: 32rpx;
  display: flex;
  /* justify-content: space-between; */
}
.toast .operation .cancel{
  width: 82px;
  color: rgba(141, 141, 141, 1);
  border-right: 2rpx solid rgba(244, 244, 244, 1);
}
.toast .operation .confirm{
  padding-left: 98rpx;
}

.container{
  height: 100%;
  background: rgba(247, 246, 254, 0.56);
  border-radius: 24px 24px 0px 0px;
  box-sizing: border-box;
  padding: 0 34rpx;
  padding-bottom: 50rpx;
}
